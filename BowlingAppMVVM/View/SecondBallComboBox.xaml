<UserControl x:Class="BowlingAppMVVM.View.SecondBallComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BowlingAppMVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <ComboBox>
        <ComboBox.Items>
            <ComboBoxItem x:Name="ZeroBallItem" Content="0"/>
            <ComboBoxItem x:Name="OneBallItem" Content="1"/>
            <ComboBoxItem x:Name="TwoBallItem" Content="2"/>
            <ComboBoxItem x:Name="ThreeBallItem" Content="3"/>
            <ComboBoxItem x:Name="FourBallItem" Content="4"/>
            <ComboBoxItem x:Name="FiveBallItem" Content="5"/>
            <ComboBoxItem x:Name="SixBallItem" Content="6"/>
            <ComboBoxItem x:Name="SevenBallItem" Content="7"/>
            <ComboBoxItem x:Name="EightBallItem" Content="8"/>
            <ComboBoxItem x:Name="NineBallItem" Content="9"/>
            <ComboBoxItem x:Name="SpareBallItem" Content="/"/>
        </ComboBox.Items>
    </ComboBox>
</UserControl>
