<UserControl x:Class="BowlingAppMVVM.View.BowlerFrame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BowlingAppMVVM.View"
             xmlns:View="clr-namespace:BowlingAppMVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <View:FirstBallComboBox x:Name="firstBallScore" Grid.Row="0" Grid.Column="0"/>
        <View:SecondBallComboBox x:Name="secondBallScore" Grid.Row="0" Grid.Column="1"/>
    </Grid>
</UserControl>
